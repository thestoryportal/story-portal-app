{
  "name": "Story Portal - Brass Alchemy Palette",
  "version": "1.0.0",

  "primary": {
    "brassGold": "#C9A227",
    "agedBrass": "#8B7355",
    "deepBronze": "#5C4033",
    "tealPatina": "#2A6B6B",
    "patinaLight": "#3D8B8B",
    "patinaDark": "#1D4E4E"
  },

  "neutrals": {
    "machineBlack": "#1A1A1A",
    "industrialGray": "#2D2D2D",
    "steamWhite": "#F5F0E6",
    "warmWhite": "#FFF8E7"
  },

  "electricity": {
    "coreWhite": "#FFFEF0",
    "innerGlow": "#FFE4A0",
    "outerGlow": "#D4A574",
    "amberEdge": "#B8860B"
  },

  "gradients": {
    "brassButton": {
      "type": "linear",
      "angle": 180,
      "stops": [
        { "color": "#C9A227", "position": 0 },
        { "color": "#8B7355", "position": 100 }
      ]
    },
    "tealButton": {
      "type": "linear",
      "angle": 180,
      "stops": [
        { "color": "#3D8B8B", "position": 0 },
        { "color": "#1D4E4E", "position": 100 }
      ]
    },
    "electricityCore": {
      "type": "radial",
      "stops": [
        { "color": "#FFFEF0", "position": 0 },
        { "color": "#FFE4A0", "position": 30 },
        { "color": "#D4A574", "position": 60 },
        { "color": "#B8860B", "position": 100 }
      ]
    }
  },

  "shadows": {
    "engravedText": "1px 1px 1px rgba(0,0,0,0.8), -1px -1px 1px rgba(255,255,255,0.1)",
    "extrudedText": "0 1px 0 rgba(255,255,255,0.3), 0 2px 0 rgba(0,0,0,0.2), 0 3px 3px rgba(0,0,0,0.4)",
    "brassButton": "inset 0 1px 0 rgba(255,255,255,0.2), inset 0 -2px 0 rgba(0,0,0,0.3), 0 2px 4px rgba(0,0,0,0.4)",
    "portalRingInner": "inset 0 0 60px rgba(0,0,0,0.8), inset 0 0 120px rgba(0,0,0,0.4)"
  },

  "opacity": {
    "overlayLight": 0.1,
    "overlayMedium": 0.3,
    "overlayHeavy": 0.6,
    "disabled": 0.5
  },

  "usage": {
    "background": "machineBlack",
    "textPrimary": "steamWhite",
    "textSecondary": "warmWhite",
    "accentPrimary": "brassGold",
    "accentSecondary": "tealPatina",
    "error": "#C0392B",
    "success": "#27AE60",
    "warning": "#F39C12"
  }
}
