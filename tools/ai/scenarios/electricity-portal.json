{
  "name": "electricity-portal",
  "description": "Electricity arc effect inside the portal ring",

  "capture": {
    "selector": "[data-capture='portal']",
    "fallbackSelector": ".portal-container",
    "duration": 3000,
    "fps": 30,
    "captureMode": "burst",
    "videoFps": 30,
    "extractFrames": false,
    "waitForEffect": true,
    "effectReadySignal": "window.__CAPTURE__?.effectActive",
    "viewport": { "width": 2560, "height": 1600 },
    "burstFrames": 120,
    "burstIntervalMs": 25,
    "settleMs": 3000,
    "headless": false,
    "mode": "newtopics",
    "video": false,
    "crop": {
      "x": 880,
      "y": 235,
      "width": 550,
      "height": 550,
      "circularMask": true,
      "_note": "Crop region for 2560x1600 viewport at 2x scale. Centers on portal ring with circular mask."
    }
  },

  "reference": {
    "withEffect": "tools/ai/references/electricity-portal/465x465/with_effect.png",
    "withoutEffect": "tools/ai/references/electricity-portal/465x465/without_effect.png",
    "mask": "tools/ai/references/electricity-portal/465x465/golden_mask.png",
    "baseline": "tools/ai/references/electricity-portal/465x465/quality_spec.json"
  },

  "thresholds": {
    "ssim": {
      "fail": 0.70,
      "pass": 0.85,
      "good": 0.90,
      "excellent": 0.95
    },
    "diffPercent": {
      "max": 15,
      "warning": 10,
      "ideal": 5
    },
    "maxIterations": 20
  },

  "convergence": {
    "minImprovement": 0.01,
    "plateauIterations": 3,
    "targetSsim": 0.90
  },

  "feedback": {
    "includeHeatmap": true,
    "includeComparison": true,
    "includePerFrameScores": false,
    "maxFramesToShow": 6
  },

  "codeTargets": [
    "src/components/Portal/ElectricityEffect.tsx",
    "src/components/Portal/ElectricityEffect.css",
    "src/shaders/electricity.glsl"
  ],

  "visualSpec": {
    "color": {
      "primary": "#FFB800",
      "secondary": "#FF6B00",
      "glow": "#FFF4D4"
    },
    "characteristics": [
      "Bright orange/yellow electricity arcs",
      "Intense radial glow from center",
      "Multiple branching lightning bolts",
      "Pulsing/flickering animation",
      "No visible background through effect"
    ]
  }
}
